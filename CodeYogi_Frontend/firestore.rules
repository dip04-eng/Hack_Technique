rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to access their own subcollections
      match /optimization_sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /analytics/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow users to read other users' basic profile information (for collaboration features)
    match /users/{userId} {
      allow read: if request.auth != null;
    }
    
    // Projects collection - users can create and manage their own projects
    match /projects/{projectId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.ownerId == request.auth.uid);
    }
    
    // Allow users to read projects they are collaborators on
    match /projects/{projectId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.collaborators;
    }
    
    // Analytics data - users can only access their own analytics
    match /analytics/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // System-wide settings - read-only for authenticated users
    match /settings/{document} {
      allow read: if request.auth != null;
    }
  }
}
