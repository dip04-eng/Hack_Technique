# GitHub Repository Analyzer & SEO Optimizer Configuration

# GitHub API Settings
# Get your token at: https://github.com/settings/tokens
# Permissions needed: repo (full repository access)
GITHUB_TOKEN=your_github_token_here
GH_TOKEN=your_github_token_here

# AI API Settings
# Groq AI Settings (for enhanced analysis)
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API (for SEO optimization)
# Get your key at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Analysis Settings
MAX_REPO_SIZE_MB=500
MAX_FILES_TO_ANALYZE=10000
CLONE_DEPTH=1

# File patterns to exclude from analysis
EXCLUDE_PATTERNS=.git,node_modules,__pycache__,.vscode,.idea,dist,build,target,.pytest_cache,.coverage,*.egg-info,.tox,logs,*.log,*.tmp

# Risk levels for cleanup suggestions
LOW_RISK_PATTERNS=*.pyc,*.pyo,__pycache__,node_modules,dist,build,*.log,*.tmp
MEDIUM_RISK_PATTERNS=*.bak,*.backup,*.old,*.orig
HIGH_RISK_PATTERNS=*.config,*.env,*.key

# Structure templates priority
PYTHON_PRIORITY=5
JAVASCRIPT_PRIORITY=5
JAVA_PRIORITY=4
GENERIC_PRIORITY=3

# Pull Request Settings
PR_ENABLED=true
PR_AUTO_MERGE=false
PR_BASE_BRANCH=main
PR_BRANCH_PREFIX=codeyogi/
